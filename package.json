{
  "name": "lilly-server",
  "version": "1.2.0",
  "private": true,
  "description": "Lilly personal assistant backend",
  "type": "module",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon --watch server.js --exec node server.js",
    "health": "node -e \"fetch('http://localhost:'+(process.env.PORT||3000)+'/health').then(r=>r.text()).then(console.log).catch(console.error)\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "openai": "^4.68.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}